{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src"],
    "lib": ["esnext","dom"],
    "target": "es5",
    "module": "NodeNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "alwaysStrict": true,
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "pretty": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./src/**/*"]
}